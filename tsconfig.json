{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "sourceMap": true,
    "target": "es2016",                                  
    "module": "commonjs",                                
    "esModuleInterop": true,
    "lib": ["es2017"],
    "types": ["jest", "node"],                            
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["./src/**/*.*"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
